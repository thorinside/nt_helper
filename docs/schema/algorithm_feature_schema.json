{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Algorithm Feature",
  "description": "Schema for Disting NT algorithm feature JSON files",
  "type": "object",
  "required": ["guid", "name", "parameters"],
  "properties": {
    "guid": {
      "type": "string",
      "pattern": "^feat_[a-z_]+$",
      "description": "Feature identifier starting with 'feat_'"
    },
    "name": {
      "type": "string",
      "description": "Human readable feature name"
    },
    "description": {
      "type": "string",
      "description": "Feature description"
    },
    "parameters": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AlgorithmParameter"
      },
      "description": "Parameters provided by this feature"
    }
  },
  "definitions": {
    "AlgorithmParameter": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Parameter name"
        },
        "unit": {
          "type": ["string", "null"],
          "description": "Parameter unit"
        },
        "min": {
          "description": "Minimum value - can be number or null"
        },
        "max": {
          "description": "Maximum value - can be number or null"
        },
        "minValue": {
          "description": "Minimum value (alternative field name)"
        },
        "maxValue": {
          "description": "Maximum value (alternative field name)"
        },
        "default": {
          "description": "Default value - can be various types"
        },
        "defaultValue": {
          "description": "Default value (alternative field name)"
        },
        "scope": {
          "type": "string",
          "enum": ["global", "per-channel", "per-trigger", "operator", "program", "mix", "routing", "vco", "gain", "filter", "animate", "channel"],
          "description": "Parameter scope"
        },
        "description": {
          "type": "string",
          "description": "Parameter description"
        },
        "enum_values": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Enumeration values for discrete parameters"
        },
        "enumValues": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Enumeration values (alternative field name)"
        },
        "type": {
          "type": "string",
          "enum": ["file", "folder", "toggle", "bus", "scaled", "enum", "trigger", "trigger/gate"],
          "description": "Parameter type"
        },
        "busIdRef": {
          "type": "string",
          "description": "Reference to bus ID parameter"
        },
        "channelCountRef": {
          "type": "string", 
          "description": "Reference to channel count parameter"
        },
        "isPerChannel": {
          "type": "boolean",
          "description": "Whether parameter is per-channel"
        },
        "is_per_channel": {
          "type": "boolean",
          "description": "Whether parameter is per-channel (alternative field name)"
        },
        "isCommon": {
          "type": "boolean",
          "description": "Whether parameter is common across algorithms"
        },
        "is_common": {
          "type": "boolean",
          "description": "Whether parameter is common (alternative field name)"
        },
        "is_bus": {
          "type": "boolean",
          "description": "Whether parameter represents a bus"
        },
        "parameterNumber": {
          "type": "integer",
          "description": "Parameter number in hardware"
        }
      }
    }
  }
}