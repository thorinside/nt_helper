    },
    {
      "name": "Adaptive",
      "unit": null,
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 1,
      "enumValues": [
        "Non-adaptive",
        "Adaptive"
      ],
      "description": "Controls update mode: Non-adaptive updates all outputs continuously (predictable timing, 2kHz effective rate). Adaptive updates only changing outputs (better performance, variable rate 2kHz-16kHz)."
