{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Disting NT Plugin Gallery",
  "description": "Schema for the Disting NT Helper plugin gallery JSON file",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Gallery schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last gallery update"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Gallery name"
        },
        "description": {
          "type": "string",
          "description": "Gallery description"
        },
        "maintainer": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      "required": [
        "name",
        "description"
      ]
    },
    "categories": {
      "type": "array",
      "description": "Available plugin categories",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Category identifier"
          },
          "name": {
            "type": "string",
            "description": "Human-readable category name"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "icon": {
            "type": "string",
            "description": "Material Design icon name",
            "examples": [
              "queue_music",
              "tune",
              "graphic_eq",
              "extension",
              "auto_fix_high",
              "code"
            ]
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    },
    "authors": {
      "type": "object",
      "description": "Plugin authors/organizations indexed by GitHub username",
      "patternProperties": {
        "^[a-zA-Z0-9]([a-zA-Z0-9-])*[a-zA-Z0-9]$": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Display name"
            },
            "bio": {
              "type": "string",
              "description": "Short biography"
            },
            "website": {
              "type": "string",
              "format": "uri",
              "description": "Author's website"
            },
            "avatar": {
              "type": "string",
              "format": "uri",
              "description": "Avatar image URL"
            },
            "verified": {
              "type": "boolean",
              "description": "Whether author is verified",
              "default": false
            },
            "socialLinks": {
              "type": "object",
              "properties": {
                "github": {
                  "type": "string",
                  "description": "GitHub username"
                },
                "twitter": {
                  "type": "string",
                  "description": "Twitter handle"
                },
                "discord": {
                  "type": "string",
                  "description": "Discord username"
                }
              }
            }
          },
          "required": [
            "name"
          ]
        }
      }
    },
    "plugins": {
      "type": "array",
      "description": "Available plugins",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique plugin identifier",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "description": "Plugin display name"
          },
          "description": {
            "type": "string",
            "description": "Short plugin description"
          },
          "longDescription": {
            "type": "string",
            "description": "Detailed plugin description (supports Markdown)"
          },
          "type": {
            "type": "string",
            "enum": [
              "lua",
              "threepot",
              "cpp"
            ],
            "description": "Plugin type"
          },
          "category": {
            "type": "string",
            "description": "Plugin category ID"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Plugin tags for search/filtering"
          },
          "author": {
            "type": "string",
            "description": "GitHub username of the author"
          },
          "repository": {
            "type": "object",
            "properties": {
              "owner": {
                "type": "string",
                "description": "GitHub repository owner"
              },
              "name": {
                "type": "string",
                "description": "GitHub repository name"
              },
              "url": {
                "type": "string",
                "format": "uri",
                "description": "Full GitHub repository URL"
              },
              "branch": {
                "type": "string",
                "description": "Default branch name",
                "default": "main"
              }
            },
            "required": [
              "owner",
              "name",
              "url"
            ]
          },
          "releases": {
            "type": "object",
            "properties": {
              "latest": {
                "type": "string",
                "description": "Latest release tag or commit hash (40-character hex for directory-based distributions)"
              },
              "stable": {
                "type": "string",
                "description": "Latest stable release tag or commit hash"
              },
              "beta": {
                "type": "string",
                "description": "Latest beta release tag or commit hash"
              }
            },
            "required": [
              "latest"
            ]
          },
          "installation": {
            "type": "object",
            "properties": {
              "targetPath": {
                "type": "string",
                "description": "Target path on SD card (e.g., 'programs/lua', 'programs/plug-ins', 'programs/three_pot')",
                "examples": [
                  "programs/lua",
                  "programs/plug-ins",
                  "programs/three_pot"
                ]
              },
              "subdirectory": {
                "type": "string",
                "description": "Optional subdirectory under targetPath (e.g., author name)"
              },
              "assetPattern": {
                "type": "string",
                "description": "Regex pattern to match release assets",
                "default": ".*\\.(zip|tar\\.gz)$"
              },
              "extractPattern": {
                "type": "string",
                "description": "Pattern for files to extract from archive",
                "default": ".*\\.(lua|3pot|o)$"
              },
              "preserveDirectoryStructure": {
                "type": "boolean",
                "description": "Whether to preserve directory structure during installation (for Lua dependencies)",
                "default": false
              },
              "sourceDirectoryPath": {
                "type": "string",
                "description": "Directory within the archive to extract (for directory-based distributions)"
              }
            },
            "required": [
              "targetPath"
            ]
          },
          "compatibility": {
            "type": "object",
            "properties": {
              "minFirmwareVersion": {
                "type": "string",
                "description": "Minimum Disting NT firmware version"
              },
              "maxFirmwareVersion": {
                "type": "string",
                "description": "Maximum Disting NT firmware version"
              },
              "requiredFeatures": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Required Disting NT features"
              }
            }
          },
          "screenshots": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Screenshot URL"
                },
                "caption": {
                  "type": "string",
                  "description": "Screenshot caption"
                },
                "thumbnail": {
                  "type": "string",
                  "format": "uri",
                  "description": "Thumbnail URL"
                }
              },
              "required": [
                "url"
              ]
            }
          },
          "documentation": {
            "type": "object",
            "properties": {
              "readme": {
                "type": "string",
                "format": "uri",
                "description": "URL to README file"
              },
              "manual": {
                "type": "string",
                "format": "uri",
                "description": "URL to manual/documentation"
              },
              "examples": {
                "type": "string",
                "format": "uri",
                "description": "URL to examples"
              }
            }
          },
          "metrics": {
            "type": "object",
            "properties": {
              "downloads": {
                "type": "integer",
                "description": "Total download count",
                "minimum": 0
              },
              "rating": {
                "type": "number",
                "description": "Average rating (1-5)",
                "minimum": 1,
                "maximum": 5
              },
              "ratingCount": {
                "type": "integer",
                "description": "Number of ratings",
                "minimum": 0
              }
            }
          },
          "featured": {
            "type": "boolean",
            "description": "Whether plugin is featured",
            "default": false
          },
          "verified": {
            "type": "boolean",
            "description": "Whether plugin is verified by maintainers",
            "default": false
          },
          "isCollection": {
            "type": "boolean",
            "description": "Whether this plugin is a collection containing multiple installable items",
            "default": false
          },
          "guid": {
            "type": "string",
            "description": "The GUID of a C++ plugin (4 character identifier used by the Disting NT)"
          },
          "collectionGuids": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of GUIDs for C++ plugin collections (each 4-character identifier)",
            "default": []
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Plugin creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Plugin last update timestamp"
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "type",
          "author",
          "repository",
          "releases",
          "installation"
        ]
      }
    }
  },
  "required": [
    "version",
    "lastUpdated",
    "metadata",
    "categories",
    "authors",
    "plugins"
  ]
}